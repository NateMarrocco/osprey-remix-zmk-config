#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

&mt {
    flavor = "balanced";
    tapping-term-ms = <250>;
};

/ {
    combos {
        compatible = "zmk,combos";

        print_screen {
            bindings = <&kp PRINTSCREEN>;
            key-positions = <25 26 27>;
        };

        equal {
            bindings = <&kp EQUAL>;
            key-positions = <18 19>;
        };

        minus2 {
            bindings = <&kp MINUS>;
            key-positions = <17 16>;
        };
    };

    keymap {
        compatible = "zmk,keymap";
        
        default_layer {

            display-name = "Base";

            bindings = <
&kp LC(Z)    &kp Q  &kp W  &kp E         &kp R         &kp T        &kp Y        &kp U                &kp I             &kp O    &kp P     &kp BACKSPACE
&kp LC(C)   &kp A  &kp S  &kp D         &kp F         &kp G        &kp H        &kp J                &kp K             &kp L    &kp F11  &kp LC(V)
&kp LEFT_ALT  &kp Z  &kp X  &kp C         &kp V         &kp B        &kp N        &kp M  &kp SEMI         &kp DOT  &kp FSLH  &kp LSHFT
                         &kp ESCAPE  &kp LCTRL  &mo 2          &kp SPACE  &mo 1     &kp ENTER
            >;
        };

        lower_layer {
            display-name = "Lower";

            bindings = <
&kp GRAVE  &kp EXCL  &kp AT  &kp HASH  &kp DLLR  &kp PRCNT  &kp CARET      &kp AMPS  &kp ASTRK  &kp LPAR          &kp RPAR           &kp GRAVE
&kp trans     &kp trans    &trans  &trans    &kp SQT    &kp DEL    &kp BACKSLASH  &kp COMMA    &kp SEMI     &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp TILDE
&trans     &trans    &kp LEFT_WIN  &trans    &trans    &trans     &trans         &trans    &trans     &trans            &kp COMMA             &trans
                             &trans    &trans    &mo 3      &kp TAB         &trans    &trans
            >;
        };

        raise_layer {
            display-name = "Raise";

            bindings = <
&kp ESCAPE  &kp N1  &kp N2  &kp N3        &kp N4          &kp N5      &kp N6  &kp N7  &kp N8  &kp N9  &kp N0  &kp BACKSPACE
&trans      &trans  &trans  &kp LEFT      &kp RIGHT       &kp DELETE  &trans  &trans  &trans  &trans  &trans  &trans
&trans      &trans  &trans  &kp UP_ARROW  &kp DOWN_ARROW  &trans      &trans  &trans  &trans  &trans  &trans  &trans
                            &trans        &trans          &kp UNDER       &mo 3   &trans  &trans
            >;
        };

        adjust_layer {
            display-name = "Adjust";

            bindings = <
&none   &none   &none   &none    &bootloader  &none    &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &trans  &trans  &bt BT_CLR
&kp F1  &kp F2  &kp F3  &kp F4   &kp F5       &kp F6   &trans        &none         &none         &none   &none   &none
&kp F7  &kp F8  &kp F9  &kp F10  &kp F11      &kp F12  &none         &sys_reset    &none         &none   &none   &none
                        &trans   &trans       &trans   &trans        &trans        &trans
            >;
        };
    };
};
